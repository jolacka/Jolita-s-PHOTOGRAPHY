---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Portfolio from '../components/Portfolio.astro';

import aboutImage from "../assets/portfolio/child/about.jpg";
import image1 from "../assets/portfolio/child/1.jpg";
import image2 from "../assets/portfolio/child/2.jpg";
import image3 from "../assets/portfolio/child/3.jpg";
import image4 from "../assets/portfolio/child/4.jpg";
import image5 from "../assets/portfolio/child/5.jpg";
import image6 from "../assets/portfolio/child/6.jpg";
import image7 from "../assets/portfolio/child/7.jpg";
import image8 from "../assets/portfolio/child/8.jpg";
import image9 from "../assets/portfolio/child/9.jpg";
import image10 from "../assets/portfolio/child/10.jpg";
import image11 from "../assets/portfolio/child/11.jpg";
---

<Layout title="Kids" description="Kids photography">
	<div class="container flex space-x-2 mx-auto px-6 mt-20">
		<a href="/#formats-photoshoots" aria-label="Open main page">Home</a>
		<span>/</span>
		<a href="#" class="text-brightRed" aria-label="Open child photosession format">Kids photography</a>
	</div>

	<!-- About Section -->
	<section id="about" data-anchor="about">
		<div class="container flex flex-col space-y-12 md:space-y-0 md:flex-row items-start md:items-center px-6 mx-auto mt-10">
			<!-- Left item -->
			<div class="flex flex-col space-y-6 md:space-y-12 md:w-2/3 pr-2">
				<h2 class="animate-hide font-serif text-brightRed text-4xl md:text-5xl lg:text-6xl whitespace-nowrap md:pr-2">
					Kids photography
				</h2>
				<div class="flex flex-col space-y-6">
					<p>
						Children's photography is a valuable memory, a beautiful story to remember. Portraits and general plans with the whole family taken at different ages, as well as shots from holidays and captured moments of everyday life will become a wonderful section of your family photo album, will bring joy when given to grandparents or keep for safe memories.
					</p>
				</div>
			</div>
			<!-- Image -->
			<div class="md:w-1/3 overflow-hidden md:h-[20rem] xl:h-[24rem]">
				<Image src={aboutImage} alt="Child picture" format="avif" class="object-cover w-full h-full" />
			</div>
		</div>
	</section>

	<section id="portfolio" data-anchor="portfolio">
		<div class="container flex flex-col space-y-6 md:space-y-12 px-6 mx-auto mt-20">
			<h2 class="animate-hide font-serif text-brightRed text-4xl md:text-5xl lg:text-6xl whitespace-nowrap pr-2 flex flex-col">
				Portfolio
			</h2>
			<div class="mt-6">
				<Portfolio
					image1={image1}
					image2={image2}
					image3={image3}
					image4={image4}
					image5={image5}
					image6={image6}
					image7={image7}
					image8={image8}
					image9={image9}
					image10={image10}
					image11={image11}
				/>
			</div>
		</div>
	</section>

</Layout>

<script>
	import "../js/animation.js";
</script>