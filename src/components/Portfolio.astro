---
import { Image } from 'astro:assets'
interface Props {
	image1: Object
	image2: Object
	image3: Object
	image4: Object
	image5: Object
	image6: Object
	image7: Object
	image8: Object
	image9: Object
	image10: Object
	image11: Object
}

const { image1, image2, image3, image4, image5, image6, image7, image8, image9, image10, image11 } =
