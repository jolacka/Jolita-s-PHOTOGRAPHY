---
export interface Props {
	name: string
	paths: string
	size?: string
}

const size = Astro.props.size || '24'
---

<!-- Icon.astro -->
<svg
	xmlns="http://www.w3.org/2000/svg"
	width={size}
	height={size}
	viewBox="0 0 256 256"
	fill="currentColor"
>
	{Astro.props.paths && <g innerHTML={Astro.props.paths} />}
</svg>
